@model IEnumerable<SistemaParroquial.Models.Misa>

@{
    ViewData["Title"] = "Misas";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2><i class="fas fa-cross"></i> Programación de Misas</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="GenerarAutomatico" class="btn btn-success me-2">
                <i class="fas fa-magic"></i> Generar Automático
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nueva Misa
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Buscar</label>
                    <input type="text" name="filtro" class="form-control" placeholder="Capilla o Estado..." value="@ViewData["filtro"]">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Inicio</label>
                    <input type="date" name="fechaInicio" class="form-control" value="@ViewData["fechaInicio"]">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Fin</label>
                    <input type="date" name="fechaFin" class="form-control" value="@ViewData["fechaFin"]">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="fas fa-filter"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de misas -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Capilla</th>
                            <th>Sacerdote</th>
                            <th>Estado</th>
                            <th>Recaudación</th>
                            <th>Sacramento</th>
                            <th style="width: 180px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var misa in Model)
                            {
                                <tr>
                                    <td>@misa.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <strong>@misa.Fecha.ToString("HH:mm")</strong>
                                    </td>
                                    <td>
                                        <i class="fas fa-church text-primary"></i>
                                        @misa.Capilla?.Nombre
                                    </td>
                                    <td>
                                        @if (misa.Sacerdote != null)
                                        {
                                            @misa.Sacerdote.NombreCompleto
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin asignar</span>
                                        }
                                    </td>
                                    <td>
                                        @if (misa.Estado == "Programada")
                                        {
                                            <span class="badge bg-info">Programada</span>
                                        }
                                        else if (misa.Estado == "Realizada")
                                        {
                                            <span class="badge bg-success">Realizada</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Cancelada</span>
                                        }
                                    </td>
                                    <td>
                                        @if (misa.MontoRecaudado.HasValue && misa.MontoRecaudado.Value > 0)
                                        {
                                            <span class="text-success fw-bold">
                                                $@misa.MontoRecaudado.Value.ToString("N2")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Pendiente</span>
                                        }
                                    </td>
                                    <td>
                                        @if (misa.SolicitudSacramental != null)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                @misa.SolicitudSacramental.Sacramento
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@misa.IdMisa" 
                                               class="btn btn-info" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@misa.IdMisa" 
                                               class="btn btn-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (misa.Estado == "Realizada" && !misa.MontoRecaudado.HasValue)
                                            {
                                                <a asp-action="RegistrarRecaudacion" asp-route-id="@misa.IdMisa" 
                                                   class="btn btn-success" title="Registrar recaudación">
                                                    <i class="fas fa-dollar-sign"></i>
                                                </a>
                                            }
                                            <a asp-action="Delete" asp-route-id="@misa.IdMisa" 
                                               class="btn btn-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">
                                    <p class="text-muted my-3">
                                        No se encontraron misas programadas.
                                        <br>
                                        <a asp-action="GenerarAutomatico" class="btn btn-link">
                                            ¿Desea generar misas automáticamente?
                                        </a>
                                    </p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h5>@Model.Count()</h5>
                                <small class="text-muted">Total Misas</small>
                            </div>
                            <div class="col-md-3">
                                <h5>@Model.Count(m => m.Estado == "Programada")</h5>
                                <small class="text-muted">Programadas</small>
                            </div>
                            <div class="col-md-3">
                                <h5>@Model.Count(m => m.Estado == "Realizada")</h5>
                                <small class="text-muted">Realizadas</small>
                            </div>
                            <div class="col-md-3">
                                <h5>$@Model.Where(m => m.MontoRecaudado.HasValue).Sum(m => m.MontoRecaudado.Value).ToString("N2")</h5>
                                <small class="text-muted">Total Recaudado</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Confirmación de eliminación
        document.querySelectorAll('a[href*="Delete"]').forEach(link => {
            link.addEventListener('click', function(e) {
                if (!confirm('¿Está seguro que desea eliminar esta misa?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
