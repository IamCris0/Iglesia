@model SistemaParroquial.Models.Misa

@{
    ViewData["Title"] = "Nueva Misa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-cross"></i> Programar Nueva Misa
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="IdCapilla" class="form-label"></label>
                            <select asp-for="IdCapilla" class="form-select" asp-items="ViewBag.IdCapilla">
                                <option value="">-- Seleccione una capilla --</option>
                            </select>
                            <span asp-validation-for="IdCapilla" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Fecha" class="form-label"></label>
                                <input asp-for="Fecha" type="datetime-local" class="form-control" />
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Estado" class="form-label"></label>
                                <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estados"></select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdSacerdote" class="form-label"></label>
                            <select asp-for="IdSacerdote" class="form-select" asp-items="ViewBag.IdSacerdote">
                                <option value="">-- Sin sacerdote asignado --</option>
                            </select>
                            <span asp-validation-for="IdSacerdote" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdSolicitudSacramental" class="form-label"></label>
                            <select asp-for="IdSolicitudSacramental" class="form-select" asp-items="ViewBag.IdSolicitudSacramental">
                                <option value="">-- Ninguna --</option>
                            </select>
                            <span asp-validation-for="IdSolicitudSacramental" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Solo se muestran solicitudes aprobadas
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MontoRecaudado" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MontoRecaudado" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="MontoRecaudado" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Dejar en blanco si a√∫n no se ha recaudado
                            </small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Programar Misa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
