@model SistemaParroquial.Models.Capilla

@{
    ViewData["Title"] = "Nueva Capilla";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-church"></i> Nueva Capilla
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la capilla" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label"></label>
                            <textarea asp-for="Direccion" class="form-control" rows="3" placeholder="Ingrese la dirección"></textarea>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdParroquia" class="form-label"></label>
                            <select asp-for="IdParroquia" class="form-select" asp-items="ViewBag.IdParroquia">
                                <option value="">-- Seleccione una parroquia --</option>
                            </select>
                            <span asp-validation-for="IdParroquia" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdLaicoCoordinador" class="form-label"></label>
                            <select asp-for="IdLaicoCoordinador" class="form-select" asp-items="ViewBag.IdLaicoCoordinador">
                                <option value="">-- Asignar coordinador más tarde --</option>
                            </select>
                            <span asp-validation-for="IdLaicoCoordinador" class="text-danger"></span>
                            <small class="form-text text-muted">
                                El coordinador puede asignarse más tarde desde la lista de capillas.
                            </small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
