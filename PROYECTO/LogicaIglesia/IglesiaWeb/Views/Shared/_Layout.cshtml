<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Parroquial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-church"></i> Sistema Parroquial
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Dashboard
                            </a>
                        </li>
                        
                        <!-- Menú de Ubicaciones -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-map-marker-alt"></i> Ubicaciones
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Capilla" asp-action="Index">
                                    <i class="fas fa-church"></i> Capillas
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Parroquia" asp-action="Index">
                                    <i class="fas fa-building"></i> Parroquias
                                </a></li>
                            </ul>
                        </li>

                        <!-- Menú de Personas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-users"></i> Personas
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Laico" asp-action="Index">
                                    <i class="fas fa-user"></i> Laicos
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Sacerdote" asp-action="Index">
                                    <i class="fas fa-user-tie"></i> Sacerdotes
                                </a></li>
                            </ul>
                        </li>

                        <!-- Menú de Eventos -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-calendar"></i> Eventos
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Misa" asp-action="Index">
                                    <i class="fas fa-cross"></i> Misas
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="EventoCapilla" asp-action="Index">
                                    <i class="fas fa-calendar-alt"></i> Eventos de Capilla
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="HorarioMisa" asp-action="Index">
                                    <i class="fas fa-clock"></i> Horarios de Misa
                                </a></li>
                            </ul>
                        </li>

                        <!-- Menú de Solicitudes -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-file-alt"></i> Solicitudes
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="SolicitudSacramental" asp-action="Index">
                                    <i class="fas fa-hands-praying"></i> Sacramentales
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="SolicitudAyuda" asp-action="Index">
                                    <i class="fas fa-hand-holding-heart"></i> Ayuda
                                </a></li>
                            </ul>
                        </li>

                        <!-- Menú de Administración -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cog"></i> Administración
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index">
                                    <i class="fas fa-users-cog"></i> Usuarios
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="RolSistema" asp-action="Index">
                                    <i class="fas fa-user-shield"></i> Roles
                                </a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Usuario actual -->
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i> 
                                @Context.Session.GetString("UsuarioNombre")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <h6 class="dropdown-header">
                                        <small>@Context.Session.GetString("UsuarioEmail")</small><br>
                                        <span class="badge bg-info">@Context.Session.GetString("UsuarioTipo")</span>
                                    </h6>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="fas fa-user"></i> Mi Perfil
                                </a></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="fas fa-key"></i> Cambiar Contraseña
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            <small>
                &copy; 2026 - Sistema de Gestión Parroquial | 
                <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
            </small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
